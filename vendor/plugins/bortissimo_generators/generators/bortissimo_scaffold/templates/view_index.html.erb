<%%= title(t('.title'), :h2) %>

<table class="index">
  <thead>
    <tr>
    <% for attribute in attributes -%>
      <th><%%= t('<%= singular_name %>.<%= attribute.name %>') %></th>
    <% end -%>
      <th colspan="3"><%%= t(:actions) %></th>
    </tr>
  </thead>

  <tbody>
  <%% @<%= plural_name %>.each do |<%= singular_name %>| %>
    <tr>
    <% for attribute in attributes -%>
      <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <% end -%>
      <td class="action"><%%= link_to t(:show), <%= singular_name %> %></td>
      <td class="action"><%%= link_to t(:edit), edit_<%= singular_name %>_path(<%= singular_name %>) %></td>
      <td class="action">
        <%%= link_to t(:destroy), <%= singular_name %>, :confirm => t(:confirm), :method => :delete %>
      </td>
    </tr>
  <%% end %>
  </tbody>
</table>

<%%= will_paginate %>

<br />

<%%= link_to t('<%= plural_name %>.new'), new_<%= singular_name %>_path %>
